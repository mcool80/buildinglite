<p>
  <strong><%= t("Address") %>:</strong>
  <%= @apartment.address %>
</p>

<p>
  <strong><%= t("Apartment no") %>:</strong>
  <%= @apartment.apartment_no %>
</p>

<% for fee_item in @fees %>
    <p><%= link_to fee_item.name, controller: "fee_page", action: "index", id: fee_item, apartment_id: @apartment.id %></p>
<% end %>


<% if current_user.admin?(:apartment => @apartment) then  %>
<%= link_to 'Edit', edit_apartment_path(@apartment) %> |
<% end %>
<%= link_to 'Back', apartments_path %>
