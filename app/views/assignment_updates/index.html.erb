<p id="notice"><%= notice %></p>

<h1>Listing Assignment Updates</h1>

<table>
  <thead>
    <tr>
      <th>Created</th>
      <th>Updated</th>
      <th>Update text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignment_updates.each do |assignment_update| %>
      <tr>
        <td><%= assignment_update.created_at %></td>
        <td><%= assignment_update.updated_at %></td>
        <td><%= assignment_update.update_text %></td>
        <td><%= link_to 'Show', assignment_update %></td>
        <td><%= link_to 'Edit', edit_assignment_update_path(assignment_update) %></td>
        <td><%= link_to 'Destroy', assignment_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

