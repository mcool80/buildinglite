<% if user_signed_in? %>
  <div id="user-services">
  <p>
    Välkommen <%= current_user.first_name %>!
  <p>
    Du är kopplad till lägenhet på adress <%= $current_apartment.address %> på området <%= $current_community.name %>
  </p>
  <h2><%= t("Available services") %></h2>
  <ul> 
    <% for fee_item in @fees %>
      <li><%= link_to fee_item.name, controller: "fee_page", action: "index", id: fee_item %></li>
    <% end %>
    <li><%= link_to t("Apartment information"), controller: "apartments", action: "showinfo", id: current_user.apartment_id %></li>
    <li><%= link_to t('Edit profile'), edit_user_registration_path %> </li>
  </ul>
  </div>

  
  <% if current_user.admin? %>
  <div id="administrator-services">
    <h2><%= t("Administration") %></h2>
      <div class="col-md-3 col-xs-12">
      <% for fee_item in @fees %>
        <li><%= link_to fee_item.name, controller: "fee_page", action: "administrate", id: fee_item %></li>
      <% end %>
  
      <li><%= link_to t("Apartments"), controller: "apartments", action: "index" %></li>
      <li><%= link_to t("Users"), controller: "users", action: "index" %></li>
      <li><%= link_to t("Add movement"), controller: "moves", action: "select_apartment" %></li>
      <li>Make maintanance plan</li>
      <li>Maintanaince activitys</li>
      <li>Long term economics</li>
      <li>Reports</li>
      </div>
    <% end %>
  </div>

<% else %> 
  <p>
    Den här applikationen gör det enkelt att ta hand om dina byggnader eller förening.
  </p>
  <p>
     <%= link_to t("Sign up"), new_user_registration_path, :class => 'navbar-link'  %> och koppla upp din förening idag.
  </p>
<% end %>
