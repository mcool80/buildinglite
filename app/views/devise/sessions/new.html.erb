<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true do %>
      <%= f.input_field :email, class: "form-control" %>
    <% end %>
    <%= f.input :password, required: false do %> 
      <%= f.input_field :password, class: "form-control" %>
    <% end %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
