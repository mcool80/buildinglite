<h2><%= t('Change your password') %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input t("Password"), label: t("New password"), required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) do %>
      <%= f.input_field :password, class: "form-control" %>
    <% end %>
    <%= f.input t("Password confirmation"), label: t("Confirm your new password"), required: true  do %>
      <%= f.input_field :password_confirmation, class: "form-control" %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("Change mypassword") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
