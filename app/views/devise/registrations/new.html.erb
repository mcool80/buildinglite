<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input User.human_attribute_name("email"), required: true, autofocus: true do %>
      <%= f.input_field :email, class: "form-control" %>
    <% end %>
    <%= f.input User.human_attribute_name("password"), required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) do %>
      <%= f.input_field :password, class: "form-control" %>
    <% end %>
    <%= f.input t("Password confirmation"), required: true do %>
      <%= f.input_field :password_confirmation, class: "form-control" %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("Sign up"), class: "btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
