<h2><%= t("Edit user") %></h2>

<div class="col-md-6 col-xs-12">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <% if not f.error_notification.nil? then %>
    <%= f.error_notification %>
    <ul>
    <%= resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <div class="form-inputs">
    <%= f.input User.human_attribute_name("email"), required: true, autofocus: true, wrapper_html: { class: ("error" if resource.errors[:email].any?) } do %>
      <%= f.input_field :email, class: "form-control" %>
    <% end %>
    <%= f.input User.human_attribute_name("first_name"), required: false, autofocus: true do %>
    <%= f.input_field :first_name, class: "form-control" %> 
    <% end %>
    <%= f.input User.human_attribute_name("last_name"), required: false, autofocus: true do %>
    <%= f.input_field :last_name, class: "form-control" %> 
    <% end %>
    <%= f.input User.human_attribute_name("phone"), required: false, autofocus: true do %>
    <%= f.input_field :phone, class: "form-control" %> 
    <% end %>
    <%= f.input User.human_attribute_name("mobile"), required: false, autofocus: true do %>
    <%= f.input_field :mobile, class: "form-control" %> 
    <% end %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p><%= t("Currently waiting confirmation for") %>: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input User.human_attribute_name("password"), autocomplete: "off", hint: t("leave blank"), required: false do %>
      <%= f.input_field :password, class: "form-control" %> 
    <% end %>
    <%= f.input User.human_attribute_name("password_confirmation"), required: false do %>
      <%= f.input_field :password_confirmation, class: "form-control" %> 
    <% end %>
    <%= f.input User.human_attribute_name("current_password"), hint: t("Need current password"), required: true, wrapper_html: { class: ("error" if resource.errors[:current_password].any?) } do %>
      <%= f.input_field :current_password, class: "form-control" %> 
      <%= f.full_error :current_password %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("Update") %>
  </div>
<% end %>
</div>
<div class="col-md-6 col-xs-12">
<h3><%= t("Cancel my account") %></h3>

<p><%= link_to t("Cancel my account"), registration_path(resource_name), data: { confirm: t("Are you sure?") }, method: :delete %></p>
</div>

<div class="col-md-12 col-xs-12 clearfix">
<%= link_to t("Back"), :back %>
</div>
