<%= simple_form_for(@assignment_status) do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :community_id, value: $current_community.id %>
  <div class="form-inputs">
    <%= f.input :status %>
    <%= f.input :order_key %>
    <%= f.check_box :close_state %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
